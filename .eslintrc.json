{
  "env": {
    "node": true,
    "es2017": true
  },
  "extends": [
    "eslint:recommended",
    "prettier",
    "prettier/@typescript-eslint"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "ignorePatterns": [
    "**/*.d.ts"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "noInlineConfig": true,
  "rules": {
    "curly": [
      "error",
      "multi-line"
    ],
    "no-template-curly-in-string": "error",
    "prefer-const": "error",
    "prefer-object-spread": "error",
    "radix": "error",
    "no-irregular-whitespace": [
      "error",
      {
        "skipComments": true
      }
    ],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/await-thenable": "error",
    "@typescript-eslint/no-floating-promises": "error",
    "@typescript-eslint/member-delimiter-style": [
      "error",
      {
        "multiline": {
          "delimiter": "semi",
          "requireLast": true
        },
        "singleline": {
          "delimiter": "semi",
          "requireLast": false
        }
      }
    ],
    "@typescript-eslint/semi": [
      "error",
      "always"
    ]
  },
  "overrides": [
    {
      "files": [
        "./*.js"
      ],
      "parserOptions": {
        "ecmaFeatures": {
          "experimentalObjectRestSpread": true
        },
        "ecmaVersion": 2019
      }
    },
    {
      "files": [
        "./src/**/*.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": "src/tsconfig.json"
      }
    },
    {
      "env": {
        "jest/globals": true
      },
      "extends": [
        "plugin:jest/recommended"
      ],
      "files": [
        "./test/**/*.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": "test/tsconfig.json"
      },
      "plugins": [
        "jest"
      ]
    }
  ]
}